<STYLES>

#VERSION 1.30

[MENU] //default style for menu
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=30%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DOOM";
ALT.FONT="DOOM";
ALT.COLOURMAP="TEXT_YELLOW";
TITLE.FONT="DOOM";
TITLE.COLOURMAP="TEXT_WHITE";
HELP.FONT="DOOM";
HELP.COLOURMAP="TEXT_GREEN";


[MAIN_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="EDGE1";
TEXT.SCALE=1.0;
TEXT.COLOURMAP="TEXT_RED";


[CHOOSE_SKILL] //New game/Choose Skill
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE1"; //header
HEADER.SCALE=1.1;
HEADER.COLOURMAP="TEXT_RED";
TITLE.FONT="EDGE1"; //"New Game"
TITLE.SCALE=1.0;
TITLE.COLOURMAP="TEXT_RED";
ALT.FONT="EDGE1";  // "Choose Skill"
ALT.SCALE=0.9;
ALT.COLOURMAP="TEXT_BLUE";
TEXT.FONT="EDGE1"; //"I'm too young to die" etc.;
TEXT.SCALE=0.8;
TEXT.COLOURMAP="TEXT_RED";


[CHOOSE_EPISODE]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=60%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE1"; //header
HEADER.SCALE=1.1;
HEADER.COLOURMAP="TEXT_RED";
TITLE.FONT="EDGE1"; //"Which Episode?"
TITLE.SCALE=1.0;
TITLE.COLOURMAP="TEXT_RED";
TEXT.FONT="EDGE1"; //"Knee deep in the dead" etc.;
TEXT.SCALE=0.9;
TEXT.COLOURMAP="TEXT_RED";


//Now both Load and Save menu use the same style entry
//This one behaves different to other styles because as it's
//considered a System menu, I experimented with new ways
//of doing things.
[LOAD_SAVE_MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=55%;
SPECIAL=STRETCH_FULLSCREEN;
ENTRY_SPACING=4;
HEADER.FONT="EDGE3"; //"Load game"
HEADER.SCALE=2.0;
HEADER.COLOURMAP="TEXT_RED";
// save name & slot block
TEXT.FONT="EDGE3"; 
TEXT.COLOURMAP="TEXT_GREY";
TEXT.SCALE=1.9;
TEXT.X_OFFSET=20;
TEXT.Y_OFFSET=40;
// save info text block
HELP.FONT="EDGE3"; 
HELP.COLOURMAP="TEXT_YELLOW";
HELP.SCALE=0.9;
HELP.X_OFFSET=210;
HELP.Y_OFFSET=40;
// next page text block
TITLE.FONT="EDGE3"; 
TITLE.COLOURMAP="TEXT_GREEN";
TITLE.SCALE=1.5;
TITLE.X_OFFSET=20;
TITLE.Y_OFFSET=160;
ALT.FONT="EDGE3";  // when we edit the save name
ALT.COLOURMAP="TEXT_GREEN";
ALT.SCALE=1.85;
// selected slot text
SELECTED.FONT="EDGE3";
SELECTED.COLOURMAP="TEXT_YELLOW";
SELECTED.SCALE=1.92;


[OPTIONS] //all the other option menus
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE3"; //header
HEADER.SCALE=1.2;
HEADER.COLOURMAP="TEXT_RED";
TEXT.FONT="EDGE3"; //items
TEXT.SCALE=1.1;
TEXT.COLOURMAP="TEXT_RED";
ALT.FONT="EDGE3"; //values / slider chars
ALT.SCALE=1.1;
ALT.COLOURMAP="TEXT_WHITE";
TITLE.FONT="EDGE3"; //Selected text
TITLE.SCALE=1.12;
TITLE.COLOURMAP="TEXT_YELLOW";
HELP.FONT="EDGE3"; //help tip at bottom of screen
HELP.COLOURMAP="TEXT_GREEN";
HELP.SCALE=1.1;


[STATS] //INTERMISSION Finished/Entering level screen
TITLE.FONT="EDGE1";//Finished/Entering text
TITLE.SCALE=0.8;
TITLE.COLOURMAP="TEXT_RED";
TEXT.FONT="EDGE1";//map name/description
TEXT.COLOURMAP="TEXT_WHITE";
TEXT.SCALE=0.7;
ALT.FONT="EDGE1"; // par times
ALT.COLOURMAP="TEXT_RED";
ALT.SCALE=0.85;


[INTERLEVEL_TEXT] //Pre/End texts on certain INTERMISSION screens
TEXT.FONT="DOOM";//map description
//TEXT.COLOURMAP="TEXT_GREEN";
TEXT.SCALE=1.0;


[CAST_SCREEN]
HEADER.SCALE=3; //Affects size of monster cast sprites
TEXT.FONT="DOOM";
TEXT.COLOURMAP="TEXT_YELLOW";


[MESSAGES] // "you picked up a clip" etc
TEXT.FONT="DOOM";
TEXT.SCALE=0.9;
//BACKGROUND.IMAGE=MESSGBOX;
//BACKGROUND.TRANSLUCENCY=40%;


[IMPORTANT_MESSAGES] //"You found a secret"
TEXT.FONT="DOOM";
TEXT.SCALE=1.0;
//TEXT.COLOURMAP="TEXT_GREEN";
//BACKGROUND.IMAGE=SECRTBOX;
//BACKGROUND.TRANSLUCENCY=20%;


[EXIT_SCREEN] //exit EDGE message
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DOOM"; // "you want to quit?" etc.


//We can only define the TIP font. Size, colour etc should be via RTS
[RTS_TIP]
TEXT.FONT="DOOM"; 


[DEFAULT]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
//SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DOOM";
ALT.FONT="DOOM";
TITLE.FONT="DOOM";
HELP.FONT="DOOM";


[AUTOMAP]
//BACKGROUND.COLOUR=#000000;
TEXT.FONT="DOOM";
ALT.FONT="AUTOMAP_DIGIT";


[HOST_NETGAME]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
HEADER.FONT="EDGE3"; //items
HEADER.COLOURMAP="TEXT_GREEN";
HEADER.SCALE=1.25;
TEXT.FONT="EDGE3"; //items
TEXT.COLOURMAP="TEXT_RED";
TEXT.SCALE=1.1;
ALT.FONT="EDGE3"; //values / slider chars
ALT.COLOURMAP="TEXT_WHITE";
ALT.SCALE=1.1;
TITLE.FONT="EDGE3"; //Selected text
TITLE.COLOURMAP="TEXT_YELLOW";
TITLE.SCALE=1.1;
HELP.FONT="EDGE3"; //help tip at bottom of screen
HELP.COLOURMAP="TEXT_YELLOW"; //"TEXT_GREEN";
HELP.SCALE=1.1;


[DIALOG] //obsolete exit EDGE message
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
SPECIAL=STRETCH_FULLSCREEN;
TEXT.FONT="DOOM";
TITLE.FONT="DOOM";

[CHAT]
TEXT.FONT="DOOM";
TEXT.COLOURMAP="TEXT_GREEN";

[NET_STATS]
TITLE.FONT="DOOM";
// leave title as red
TEXT.FONT="DOOM";
